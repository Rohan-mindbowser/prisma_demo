generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @default(uuid())
  name String
}

model Employee {
  id               String     @id @default(uuid())
  name             String
  email            String     @unique
  department       Department
  reportingManager Manager    @relation(fields: [managerId], references: [id])
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  managerId        String
}

model Manager {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Employee  Employee[]
}

enum Department {
  SALES
  HR
  MARKETING
  DEVELOPMENT
}
